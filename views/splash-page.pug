extends layout.pug 
block content 
    div.main-content-wrapper
        div.under-nav 
            div.under-nav-text
                p#intro-p <span id="groovium">Groovium</span> is a place to <span id="yellow">write</span>, <span id="red">read</span>, and <span id="green">connect</span>
                p#sub-intro-p It’s easy and free to post your thinking on food, sports, tech, pets and connect with millions of readers.
                if authenticated 
                    a(id="get-groovy-button" href='/users/my-stories') Get Groovy
                else
                    a(id="get-groovy-button" href='/sign-up') Get Groovy
            div.under-nav-img
                img(src="./logos/splash-image.png", alt="logo of woman with hippie glasses")
        div.content-div 
            div.content-intro 
                h2 See what's trending on Groovium
                img(class="form-peace-image" width="162" height="36" src="/logos/peace-sign-logo.png", alt="a sign of peace")
            div.splash-stories-div 
                each story in newStories
                    div.story-container 
                        div.story-container-left
                            div.avatar-and-name
                                div(class="splash-avatar-img" style=`background-image: url('${story.avatarUrl}')`)
                                a(class="aNoUnderline")= `${story.firstName} ${story.lastName}`
                            div.story-title
                                a(class="aNoUnderLine"): h3= story.title
                            div.story-summary 
                                p= story.summary
                            div.story-info
                                div.left-story-info
                                    p= story.date
                                    p=  '•'  
                                    p= `${story.readTimeMinutes} min read`
                                    a(class="splash-story-topic")= story.topic
                                div.right-story-info 
                        div.story-container-right 
                            div(class="splash-story-img" style=`background-image: url('${story.storyImgUrl}')`)
        div.splash-topics-div
            h3 Discover more of what matters to you
            div.splash-topics
                a(class="aNoUnderline splash-story-topic") Pets
                a(class="aNoUnderline splash-story-topic") Sports
                a(class="aNoUnderline splash-story-topic") Food
                a(class="aNoUnderline splash-story-topic") Tech