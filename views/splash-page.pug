extends layout.pug
block content
    div.main-content-wrapper
        div.under-nav
            div.under-nav-text
                p#intro-p <span id="groovium">Groovium</span> is a place to <span id="yellow">write</span>, <span id="red">read</span>, and <span id="green">connect</span>
                p#sub-intro-p Itâ€™s easy and free to post your thinking on food, sports, tech, pets and connect with millions of readers.
                if authenticated
                    a(id="get-groovy-button" href='/users/my-stories') Get Groovy
                else
                    a(id="get-groovy-button" href='/sign-up') Get Groovy
            div.under-nav-img
                img(src="./logos/splash-image.png", alt="logo of woman with hippie glasses")
        div.content-div
            div.content-intro
                h2 See what's trending on Groovium
                img(class="form-peace-image" width="162" height="36" src="/logos/peace-sign-logo.png", alt="a sign of peace")
        .slide-container
            .carousel-button-left
                div(class="carousel-button")
                    span(class="fas fa-chevron-circle-left")
            .carousel
                .slides
                    each story in newStories
                        .slide
                            .slide-border
                                .slider-opacity
                                .slide-top
                                    .slide-top-inner
                                        .slide-box-left
                                            .avatar-box-center
                                                .slide-avatar-box
                                                    div(class="slide-splash-avatar-img" style=`background-image: url('${story.avatarUrl}')`)
                                                    a(class="slide-user-name")= `${story.firstName} ${story.lastName}`
                                        .slide-box-right
                                            .slide-story-box
                                                div(class="slide-splash-story-img" style=`background-image: url('${story.storyImgUrl}')`)
                                .slide-story
                                    .slide-story-title
                                        a(class="slide-story-title-format"): p= story.title
                                    .slide-story-summary
                                        p= story.summary
                                .slide-story-bottom
                                    .slide-story-info
                                        p(class="slidebotdiv")= story.date
                                        a(class="slide-splash-story-topic")= story.topic
                                        p(class="slidebotdiv")= `${story.readTimeMinutes} min read`
            .carousel-button-right 
                div(class="carousel-button_next")
                    span(class="fas fa-chevron-circle-right")


        script(src='../javascripts/slide.js')
        div.splash-topics-div
            h3 Discover more of what matters to you
            div.splash-topics
                a(class="aNoUnderline splash-story-topic") Pets
                a(class="aNoUnderline splash-story-topic") Sports
                a(class="aNoUnderline splash-story-topic") Food
                a(class="aNoUnderline splash-story-topic") Tech
